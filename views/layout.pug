doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description" content=description)
    link(rel="icon",href="/favicon.png")
    title We are ghosts ▶ #{ title }
    link(rel="stylesheet", href="/stylesheets/bootstrap.css")
    link(rel="stylesheet", href="/stylesheets/hacker.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/jquery.js")
    if recapcha
      script(src='https://www.google.com/recaptcha/api.js')
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") ashipka.pw
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            if imauth
              li
                a(href="/spot")
                  span.glyphicon.glyphicon-folder-open(aria-hidden="true")
          ul.nav.navbar-nav.navbar-right
            if imauth
              li
                a(href="/login/logout")
                  | Выйти 
                  span.glyphicon.glyphicon-log-out(aria-hidden="true")
            else
              li
                a(href="/login")
                  | Login 
                  span.glyphicon.glyphicon-log-in(aria-hidden="true")
    section#title
      .container
        h1= h1
    .container
      .row#main
        block content
    script(src="/javascripts/bootstrap.js")
    script(src="/javascripts/scripts.js")
